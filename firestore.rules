rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Party Sessions - Allow public read for voting, allow creation for testing
    match /party-sessions/{sessionId} {
      // Allow anyone to read session data (for voting)
      allow read: if true;
      
      // Allow creation and updates for testing (will be restricted in production)
      allow create: if true;
      allow update: if true; // Allow updates for testing (session ending, etc.)
      allow delete: if request.auth != null;
      
      // Subcollections for candidates, votes, and participants
      match /candidates/{candidateId} {
        // Anyone can read candidates (for voting)
        allow read: if true;
        
        // Allow creation and updates for testing
        allow create: if true;
        allow update: if true; // Allow updates for testing (vote counts, etc.)
        allow delete: if request.auth != null;
      }
      
      match /votes/{voteId} {
        // Anyone can read votes (for live results)
        allow read: if true;
        
        // Anyone can create votes (for voting)
        allow create: if true;
        
        // Only authenticated users can update/delete votes
        allow update, delete: if request.auth != null;
      }
      
      match /participants/{participantId} {
        // Anyone can read participants (for live count)
        allow read: if true;
        
        // Anyone can create participants (for joining)
        allow create: if true;
        
        // Only authenticated users can update/delete participants
        allow update, delete: if request.auth != null;
      }
    }
    
    // Analytics and logs - authenticated users only
    match /analytics/{sessionId} {
      allow read, write: if request.auth != null;
    }
    
    // User profiles - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny for any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
